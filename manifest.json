{
  "manifest_version": 2,

  "name": "R/a/dio Notify",
  "description": "This extension notifies when a new DJ came up",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Click here!"
  },
  "permissions": [
    "storage",
    "downloads",
    "notifications",
    "https://r-a-d.io/api"
  ],
  "background": {
    "scripts": ["resource/jquery-3.1.1.js", "backgroundPoll.js"]
  }
}
