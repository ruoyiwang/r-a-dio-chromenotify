{
  "manifest_version": 2,

  "name": "R/a/dio Notify",
  "description": "This extension notifies when a new DJ came up",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "downloads",
    "notifications",
    "https://r-a-d.io/api"
  ],
  "background": {
    "scripts": ["resource/jquery-3.1.1.min.js", "js/backgroundPoll.js"]
  }
}
